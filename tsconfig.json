{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2020",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
        }
    },
    "include": [
        "src/**/*.*",
        "src/types/**.d.ts",
        "src/types/**/*.*"
    ],
}